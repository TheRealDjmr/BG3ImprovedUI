	<!-- <BitmapImage x:Key="ADIFFERENTUNIQUENAMEFORIMAGE" UriSource="pack://application:,,,/GustavNoesisGUI;component/Assets/MODNAME/CC/icons_resources/NAMEOFDDSFILEFORTHEICON.png" /> -->
