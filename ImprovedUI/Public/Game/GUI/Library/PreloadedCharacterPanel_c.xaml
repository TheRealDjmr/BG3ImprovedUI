								<Setter TargetName="ExpanderButton" Property="BoundEvent" Value="UIAccept"/>
							</DataTrigger>
							<MultiTrigger>
								<MultiTrigger.Conditions>
									<Condition SourceName="ExpanderButton" Property="IsChecked" Value="True"/>
