							<Setter TargetName="SkillName" Property="Foreground" Value="{StaticResource LS_selectedTextPad}"/>
							<Setter TargetName="SkillModifier" Property="Foreground" Value="{StaticResource LS_selectedTextPad}"/>
						</DataTrigger>
					</DataTemplate.Triggers>
				</DataTemplate>
			</Setter.Value>
		</Setter>
