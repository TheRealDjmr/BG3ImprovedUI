					</ls:StateEvent.Actions>
				</ls:StateEvent>
				<ls:StateEvent Name = "OpenSplashScreen">
					<ls:StateEvent.Actions>
						<ls:PushState Name="SplashScreen"/>
						<ls:RemoveState/>
					</ls:StateEvent.Actions>
				</ls:StateEvent>
				<!-- MOD END -->
				<ls:StateEvent Name = "OpenPinnedTooltips">
					<ls:StateEvent.Actions>
						<ls:AddSubstate Name="PinnedTooltips"/>
					</ls:StateEvent.Actions>
				</ls:StateEvent>
				<ls:StateEvent Name = "GE.OnDialogueShow">
